CC  = icc
CXX = icpc
FC  = ifort
AR  = xiar rcs
MPICC  = mpicc
MPICXX = mpicxx

DYNAMIC     = 1
DO_SCF      = 0
SCF_TIMMING = 0
SCF_OUT     = 0

#OPTFLAGS = -offload-option,mic,compiler,"-z defs -no-opt-prefetch"
OPTFLAGS  = -no-offload
OPTFLAGS += -m64 -xHost
CFLAGS    = -O3 -Wall -openmp -std=gnu99 -fasm-blocks
CFLAGS   += -Wunknown-pragmas -Wunused-variable
CFLAGS   += ${OPTFLAGS}

MKLROOT = /usr/local/packages/intel/mkl/11.2

BLAS_INCDIR      = /usr/local/packages/intel/mkl/11.2/include/
BLAS_LIBDIR      = /usr/local/packages/intel/mkl/11.2/lib/intel64/
BLAS_LIBS        = -lmkl_intel_lp64 -lmkl_core -lmkl_intel_thread -lpthread -lm 

SCALAPACK_INCDIR = /usr/local/packages/intel/mkl/11.2/include/
SCALAPACK_LIBDIR = /usr/local/packages/intel/mkl/11.2/lib/intel64/
SCALAPACK_LIBS   = -lmkl_scalapack_lp64 -lmkl_blacs_intelmpi_lp64

MPI_INCDIR = /usr/local/packages/mvapich2/1.9/intel-13.2.146/include/
MPI_LIBDIR = /usr/local/packages/mvapich2/1.9/intel-13.2.146/lib/
MPI_LIBS =

GA_INCDIR = /nv/hp16/echow7/work/GAlib-armci/include
GA_LIBDIR = /nv/hp16/echow7/work/GAlib-armci/lib
GA_LIBS = -lga

ARMCI_INCDIR = /nv/hp16/echow7/work/GAlib-armci/include
ARMCI_LIBDIR = /nv/hp16/echow7/work/GAlib-armci/lib
ARMCI_LIBS = -larmci

ERD_TOP = /nv/hp16/echow7/work/ERDlib

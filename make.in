CC  = icc   
CXX = icpc  
FC  = ifort 
AR  = xiar rcs

MPICC  = mpiicc
MPICXX = mpiicpc

DYNAMIC     = 1
DO_SCF      = 1
SCF_TIMMING = 1
SCF_OUT     = 0

OPTFLAGS  = 
CFLAGS    = -O3 -Wall -qopenmp -std=gnu99 -fasm-blocks -g -xHost -diag-disable=10441
CFLAGS   += -Wunknown-pragmas -Wunused-variable
CFLAGS   += ${OPTFLAGS}

BLAS_LIBS      = -lmkl_intel_lp64 -lmkl_core -lmkl_intel_thread -lpthread -lm 
SCALAPACK_LIBS = -lmkl_scalapack_lp64 -lmkl_blacs_intelmpi_lp64

MPI_INCDIR = .
MPI_LIBDIR = .
MPI_LIBS   =

ERD_LIBDIR = ${WORK_TOP}/libcint
ERD_INCDIR = ${WORK_TOP}/libcint
ERD_LIBS   = $(ERD_LIBDIR)/libcint.a
ERD_LIBS   += ${WORK_TOP}/simint/build-avx512/install/lib/libsimint.a

GTM_LIBDIR = ${WORK_TOP}/GTMatrix
GTM_INCDIR = ${WORK_TOP}/GTMatrix
GTM_LIBS   = $(GTM_LIBDIR)/libGTMatrix.a
